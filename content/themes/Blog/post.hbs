{{!< default}}

{{#post}}


{{#if image}}
<div class="jumbotron jumbotron-post" style="background-image: url({{image}});">
</div>
{{/if}}

<div class="container">
    <div class="row {{post_class}}">
        <section class="col-sm-12">

            <article>
                <div class="post-header">
                    <h3 class="text-xs-center">{{{title}}}</h3>
                    <div class="text-xs-center">
                        <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="Do of MMMM YYYY"}}</time>
                    </div>
                </div>

                <section class="post-content">
                    {{content}}
                </section>

                <footer class="post-footer">

                    <section class="author clearfix">
                        <div class="col-sm-2 text-xs-center">
                            <img class="rounded-circle img-fluid author-img " src="{{author.image}}" alt="Author image" nopin="nopin" />
                        </div>
                        <div class="col-sm-10">
                            <div class="author-meta">
                                <h4>{{author.name}}</h4>
                                <p>{{{author.bio}}} <a href="{{author.website}}">{{author.website}}</a></p>
                            </div>
                        </div>

                    </section>


                    {{subscribe_form
                      form_class="form-inline"
                      input_class="form-control"
                      button_class="btn btn-primary"
                      placeholder="Your email address"
                      autofocus="false"
                    }}

                    <section class="read-next text-xs-center">
                        {{#next_post}}
                        <h4>Up next</h4>
                        <a class="" href="{{url}}">
                            <section class="post">
                                <h3>{{title}}</h3>
                                <p>{{excerpt words="19"}}&hellip;</p>
                            </section>
                        </a>
                        {{/next_post}}
                    </section>

                </footer>

                <section class="comments">
                    <div id="disqus_thread"></div>
                    <script type="text/javascript">
                        var disqus_identifier = 'ghost-{{id}}';
                        (function() {
                            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                        })();
                    </script>
                </section>

            </article>

        </section>

    </div>

</div>
{{/post}}
